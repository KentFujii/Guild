<% @title = 'タグカテゴリー管理' %>
<h1><%= @title %></h1>

<div class="table-wrapper">
  <% @tags.each do |tag| %>
    <li >
      <div class="panel panel-default tags">
        <span class='tag'>
          <%= tag.value %>
          <%= link_to('', '#',
            class: 'glyphicon glyphicon-remove', style: 'color: black; float: right') %>
        </span>
      </div>
    </li>
  <% end %>
</div>
